<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context="com.ehab.rakabny.ui.BusReservationActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/common_toolbar" />
    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:padding="8dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingEnd="20dp"
                    android:paddingStart="12dp"
                    android:paddingTop="18dp">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginBottom="6dp"
                        android:contentDescription="Pickup location"
                        android:src="@drawable/start_icon" />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="6dp"
                        android:contentDescription="to"
                        android:src="@drawable/to_icon" />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:contentDescription="Drop of location"
                        android:src="@drawable/end_icon" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Spinner
                        android:id="@+id/from_spinner"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="9dp"
                        android:background="@drawable/bg_ccv"
                        android:entries="@array/from_locations_labels"
                        android:focusedByDefault="true"
                        android:paddingStart="10dp" />


                    <Spinner
                        android:id="@+id/to_spinner"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="9dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/bg_ccv"
                        android:entries="@array/to_locations_labels"
                        android:paddingStart="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?android:attr/listChoiceBackgroundIndicator"
                    android:gravity="center">

                    <Button
                        android:id="@+id/reverse_button"
                        android:layout_width="20dp"
                        android:layout_height="30dp"
                        android:background="@drawable/reverse"
                        android:clickable="true" />

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:paddingStart="5dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="20dp"
                    android:contentDescription="Add passenger"
                    android:src="@drawable/users_icon" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="1dp"
                    android:background="@drawable/bg_ccv"
                    android:orientation="horizontal"
                    android:padding="14dp">

                    <EditText
                        android:id="@+id/number_seats_edittext"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="#00000000"
                        android:hint="Number of Seats"
                        android:inputType="number"
                        android:lines="1"
                        android:maxLength="1"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:textColor="@color/text"
                        android:textColorHint="@color/text"
                        android:textSize="@dimen/text" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="20dp"
                    android:contentDescription="Select date icon"
                    android:src="@drawable/calender_icon" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_ccv"
                    android:orientation="horizontal"
                    android:paddingBottom="14dp"
                    android:paddingTop="14dp">

                    <com.ehab.rakabny.customviews.TextViewMedium
                        android:id="@+id/reservation_date_textview"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:paddingStart="20dp"
                        android:text="23/10/1990"
                        android:textColor="@color/md_black_1000" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="20dp"
                    android:contentDescription="Choose time icon"
                    android:src="@drawable/time_icon" />

                <Spinner
                    android:id="@+id/time_spinner"
                    android:layout_width="140dp"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_ccv"
                    android:entries="@array/times"
                    android:paddingStart="10dp" />
            </LinearLayout>


            <Button
                android:id="@+id/next_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:layout_marginTop="50dp"
                android:background="@drawable/bg_btn"
                android:fontFamily="sans-serif"
                android:text="@string/bus_reservation_button_label"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="17sp" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>
